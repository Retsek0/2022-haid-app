<!--This is the rough structure of the app-->
<App>
    <Login>
        <!--This component contains the login form-->
        <TextInput></TextInput>
        <TextInput></TextInput>
        <Button></Button>
    </Login>
    <Sign-Up>
        <!--This component contains the registration form-->
        <TextInput></TextInput>
        <TextInput></TextInput>
        <TextInput></TextInput>
        <TextInput></TextInput>
        <Button></Button>
    </Sign-Up>
    <Home>
        <StatusBar>
            <!--This component contains a profile picture in a button that when clicked will take the user to their profile
                it will also contain a greeting-->
        </StatusBar>
        <Activity>
            <!--This component is a NavigationContainer which displays either explore, saved or bookings, which are all scrollable views-->
            <Explore>
                <!--This component is rendered when explore is selected-->
                <Filter></Filter>
                <Options>
                    <!--This component contains the flights, stays and cars taskbar. Props will have to be passed back up to 
                        the <Explore> component in order to use selected option when displaying the right services-->
                    <Button>Flights</Button>
                    <Button>Stays</Button>
                    <Button>Cars</Button>
                </Options>
                <Services>
                    <!--This component will display the selected options in a scrollable list-->
                    <!--Not 100% sure on the best way to do this but each option will be contained in the same component and given different props-->
                    <!--Map an array of services (data) into an array of service components (interactive)-->
                </Services>
            </Explore>
            <Saved>
                <!--This component is rendered when saved is selected-->
                <!--There is no design for this component yet-->
            </Saved>
            <Bookings>
                <!--This component is rendered when bookings is selected-->
                <!--There is no design for this component yet-->
            </Bookings>
        </Activity>
        <ActivityMenu>
            <!--This component contains a row of buttons allowing the user to navigate to Explore, Saved and Bookings-->
        </ActivityMenu>
    </Home>
</App>